<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:maxHeight="500dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết Danh mục"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Tên danh mục -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên danh mục:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvChiTietTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên danh mục"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:minHeight="48dp"
            android:gravity="center_vertical" />

        <!-- Mô tả -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvChiTietMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả danh mục"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:minHeight="80dp"
            android:gravity="top" />

        <!-- ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvChiTietId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID danh mục"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:minHeight="40dp"
            android:gravity="center_vertical" />

        <!-- Button Đóng -->
        <Button
            android:id="@+id/btnDong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B5CBF3"
            android:padding="16dp" />

    </LinearLayout>

</ScrollView>

