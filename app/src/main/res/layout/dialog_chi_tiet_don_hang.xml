<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#FFFFFF">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết đơn hàng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Mã đơn hàng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mã đơn hàng:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DH001"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trạng thái:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ xác nhận"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FF9800" />
        </LinearLayout>

        <!-- Lý do hủy (nếu có) -->
        <LinearLayout
            android:id="@+id/layoutCancelReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:background="#FFEBEE"
            android:padding="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lý do hủy đơn hàng:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:layout_marginBottom="4dp" />
            <TextView
                android:id="@+id/tvCancelReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Thời gian đặt hàng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thời gian đặt hàng:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/12/2024 10:30"
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Voucher Info (nếu có) -->
        <LinearLayout
            android:id="@+id/layoutVoucher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            android:background="#E8F5E9"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voucher đã áp dụng"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#28A05E"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvVoucherTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mừng ngày 12/12"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mã: "
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvVoucherCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VOUCHER123"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giảm giá: "
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvVoucherDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-50.000đ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#28A05E" />
            </LinearLayout>
        </LinearLayout>

        <!-- Tổng tiền -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng tiền:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.000đ"
                android:textSize="16sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Thành tiền (sau khi giảm giá) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thành tiền:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.000đ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E91E63" />
        </LinearLayout>

        <!-- Thông tin người đặt -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin người đặt"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- Tên người đặt -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Họ tên:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="end" />
        </LinearLayout>

        <!-- Email người đặt -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvUserEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="user@example.com"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="end" />
        </LinearLayout>

        <!-- SĐT người đặt -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số điện thoại:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0123456789"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="end" />
        </LinearLayout>

        <!-- Thông tin người nhận -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin người nhận"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <!-- Tên người nhận -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Họ tên:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvReceiverName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="end" />
        </LinearLayout>

        <!-- Địa chỉ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Địa chỉ:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvReceiverAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="123 Đường ABC, Quận XYZ"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="end"
                android:maxLines="3"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Số điện thoại -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số điện thoại:"
                android:textSize="16sp"
                android:textColor="#666666" />
            <TextView
                android:id="@+id/tvReceiverPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="0123456789"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="end" />
        </LinearLayout>

        <!-- Danh sách sản phẩm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách sản phẩm"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOrderDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />

        <!-- Nút hủy đơn hàng (chỉ hiện khi chưa được xác nhận) -->
        <Button
            android:id="@+id/btnHuyDonHang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy đơn hàng"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#F44336"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Nút đóng -->
        <Button
            android:id="@+id/btnDong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#B5CBF3"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>

