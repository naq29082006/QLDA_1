<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5CBF3"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".ManchinhAdmin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang Admin"
                android:textSize="32sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Text chào hỏi -->
            <TextView
                android:id="@+id/tvTenKhachHang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào, Khách hàng"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginBottom="24dp" />

            <!-- Hàng trên: Xem sản phẩm và Giỏ hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnXemSanPham"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Xem sản phẩm"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:backgroundTint="#E0E0E0"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btnGioHang"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Giỏ hàng"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:backgroundTint="#E0E0E0"
                    android:elevation="2dp" />

            </LinearLayout>

            <!-- Hàng giữa: Lịch sử đơn hàng và Đặt hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnLichSuDonHang"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Lịch sử đơn hàng"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:backgroundTint="#E0E0E0"
                    android:elevation="2dp" />

                <Button
                    android:id="@+id/btnDatHang"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Đặt hàng"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:backgroundTint="#E0E0E0"
                    android:elevation="2dp" />

            </LinearLayout>

            <!-- Hàng dưới: Tài khoản -->
            <Button
                android:id="@+id/btnTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:text="Tài khoản"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:backgroundTint="#E0E0E0"
                android:elevation="2dp" />

            <!-- Text mô tả -->
            <TextView
                android:id="@+id/tvSuaThongTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa thông tin tài khoản"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:layout_marginBottom="24dp" />

            <!-- Nút Login -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Login"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#B5CBF3"
                android:elevation="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
